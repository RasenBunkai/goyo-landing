---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";

type Props = {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string; // ruta pública, ej: "/og/og-home.jpg"
  noindex?: boolean;
};

const {
  title = "Tortas Goyo - Sabor Auténtico",
  description = "Tortas, hamburguesas y bebidas desde 1995. Ingredientes frescos, porciones generosas y pedidos por WhatsApp.",
  canonical = Astro.url.href,
  ogImage = "/og/og-default.jpg",
  noindex = false,
} = Astro.props;

// recomendado: usar URL absoluta en OG/Twitter
const ogImageAbs = new URL(ogImage, Astro.url).href;
const canonicalAbs = new URL(canonical, Astro.url).href;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="canonical" href={canonicalAbs} />
    <meta
      name="robots"
      content={noindex ? "noindex,nofollow" : "index,follow"}
    />

    {/* Favicons (pon al menos /favicon.ico o /favicon.svg) */}
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

    {/* Open Graph */}
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Tortas Goyo" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalAbs} />
    <meta property="og:image" content={ogImageAbs} />

    {/* Twitter */}
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageAbs} />

    {/* Color UI (opcional) */}
    <meta name="theme-color" content="#f97316" />

    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Restaurant",
        name: "Tortas Goyo",
        url: canonicalAbs,
        image: ogImageAbs,
        servesCuisine: ["Mexicana", "Comida rápida"],
        priceRange: "$$",
        telephone: "+52 55 0000 0000",
        address: {
          "@type": "PostalAddress",
          streetAddress: "Av. Principal 123",
          addressLocality: "Cancún",
          addressRegion: "Quintana Roo",
          addressCountry: "MX",
        },
      })}
    />
  </head>

  <body>
    <slot />
    <ClientRouter />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    scroll-behavior: smooth;
  }
</style>
