---
import Phone from "../../public/svg/Phone.astro";
import MapPin from "../../public/svg/MapPin.astro";
import CartIcon from "./CartIcon.tsx";

const navItems = [
  {name: "Inicio", href: "/"},
  {name: "Menú", href: "/menu"},
  {name: "Sucursales", href: "/sucursales"},
];
---

<header
  class="fixed top-0 w-full bg-white/95 backdrop-blur-sm shadow-sm z-50 transition-all duration-300">
  <div class="container mx-auto px-4 py-4 md:px-24">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <div
          class="w-10 h-10 bg-gradient-to-br from-orange-500 to-red-500 rounded-full flex items-center justify-center">
          <span class="text-white font-bold text-xl">TG</span>
        </div>
        <span class="text-2xl font-bold text-gray-800">Tortas Goyo</span>
      </div>
      <div class="hidden lg:flex items-center space-x-6 text-sm text-gray-600">
        <div class="flex items-center space-x-2">
          <Phone className="size-4" />
          <a href="tel:(555)123-4567">(555) 123-4567</a>
        </div>
        <div class="flex items-center space-x-2">
          <MapPin className="size-4" />
          <a
            href="https://maps.app.goo.gl/e9rGKopNVDxNjG9N7"
            target="_blank"
            rel="noopener noreferrer">Av. Principal 123, Ciudad</a
          >
        </div>
      </div>
      <nav class="hidden md:flex items-center space-x-8">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
              {item.name}
            </a>
          ))
        }
        <!-- Agrega el ícono del carrito aquí -->
        <CartIcon client:load />
        <a
          href="/carrito"
          class="bg-orange-500 text-white px-6 py-2 rounded-full hover:bg-orange-600 focus:ring focus:ring-orange-300 transition duration-300">
          Ordenar Ahora
        </a>
      </nav>
      <button
        class="md:hidden p-2 cursor-pointer"
        aria-label="Toggle menu"
        onclick="toggleMenu()">
        <svg id="menu-icon" class="w-6 h-6" viewBox="0 0 24 24" fill="none">
          <path
            d="M4 6h16M4 12h16M4 18h16"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </button>
    </div>
    <div
      id="mobile-menu"
      class="md:hidden mt-4 pb-4 border-t border-gray-200 hidden">
      <nav class="flex flex-col space-y-4 mt-4">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
              {item.name}
            </a>
          ))
        }
        <!-- Agrega el enlace al carrito en móvil -->
        <a
          href="/carrito"
          class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
          Carrito
        </a>
        <a
          href="/carrito"
          class="bg-orange-500 text-white px-6 py-2 rounded-full hover:bg-orange-600 focus:ring focus:ring-orange-300 transition duration-300 w-fit">
          Ordenar Ahora
        </a>
        <div
          class="flex flex-col space-y-2 text-sm text-gray-600 pt-4 border-t border-gray-200">
          <div class="flex items-center space-x-2">
            <Phone className="size-4" aria-hidden="true" />
            <a href="tel:(555)123-4567">(555) 123-4567</a>
          </div>
          <div class="flex items-center space-x-2">
            <MapPin className="size-4" aria-hidden="true" />
            <a
              href="https://maps.app.goo.gl/e9rGKopNVDxNjG9N7"
              target="_blank"
              rel="noopener noreferrer">Av. Principal 123, Ciudad</a
            >
          </div>
        </div>
      </nav>
    </div>
  </div>
</header>

<script>
  let isMenuOpen = false;
  function toggleMenu() {
    isMenuOpen = !isMenuOpen;
    const menu = document.getElementById("mobile-menu");
    const icon = document.getElementById("menu-icon");
    if (menu) {
      menu.classList.toggle("hidden", !isMenuOpen);
    }
    if (icon) {
      icon.innerHTML = isMenuOpen
        ? `<svg class="w-6 h-6" viewBox="0 0 24 24" fill="none"><path d="M6 18L18 6M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>`
        : `<svg class="w-6 h-6" viewBox="0 0 24 24" fill="none"><path d="M4 6h16M4 12h16M4 18h16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>`;
    }
  }
</script>
